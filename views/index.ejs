<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Furniture</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <h1>Furniture Shop</h1>
        <div id="cartContainer">
            <span id="welcomeMessage"></span>
            <button class="btn login" id="allOrdersView"><img id="cartIcon" src="/images/shopping-cart.png"
                    alt="Cart"></button>
            <button class="btn" id="logoutButton">Logout</button>
        </div>
    </header>
    <div class="main">
        <div class="product">
            <h2>Sofa</h2>
            <img class="image" src="/images/sofa.avif" alt="Sofa">
            <p>Price: $500</p>
            <button class="btn login add-to-cart" data-name="Sofa" data-price="500">Add to Cart</button>
        </div>
        <div class="product">
            <h2>Bed</h2>
            <img class="image" src="/images/bed.avif" alt="Bed">
            <p>Price: $300</p>
            <button class="btn login add-to-cart" data-name="Bed" data-price="300">Add to Cart</button>
        </div>
        <div class="product">
            <h2>Chair</h2>
            <img class="image" src="/images/chair.avif" alt="Chair">
            <p>Price: $100</p>
            <button class="btn login add-to-cart" data-name="Chair" data-price="100">Add to Cart</button>
        </div>
    </div>
    <div class="otherItems">
        <h2>Products</h2>
        <div class="container">
            <div class="otherProducts">
                <div class="product newProduct">
                    <h2>Lamp</h2>
                    <img src="/images/lamp.avif" alt="Desk">
                    <p>Price: $250</p>
                    <button class="btn login add-to-cart" data-name="Lamp" data-price="250">Add to Cart</button>
                </div>
                <div class="product newProduct">
                    <h2>Bookshelf</h2>
                    <img src="/images/bookshelf.avif" alt="Bookshelf">
                    <p>Price: $150</p>
                    <button class="btn login add-to-cart" data-name="Bookshelf" data-price="150">Add to Cart</button>
                </div>
                <div class="product newProduct">
                    <h2>Coffee Table</h2>
                    <img src="/images/coffee-table.avif" alt="Coffee Table">
                    <p>Price: $180</p>
                    <button class="btn login add-to-cart" data-name="Coffee Table" data-price="180">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>

    <div id="userDetailsModal" class="modal">
        <div class="modal-content">
            <div class="inputForm">
                <form id="userDetailsForm">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address" required>
                    <label for="city">City:</label>
                    <input type="text" id="city" name="city" required>
                    <label for="province">Province:</label>
                    <select id="province" name="province" required>
                        <option value="">Select Province</option>
                        <option value="AB">Alberta</option>
                        <option value="BC">British Columbia</option>
                        <option value="MB">Manitoba</option>
                        <option value="NB">New Brunswick</option>
                        <option value="NL">Newfoundland and Labrador</option>
                        <option value="NS">Nova Scotia</option>
                        <option value="ON">Ontario</option>
                        <option value="PE">Prince Edward Island</option>
                        <option value="QC">Quebec</option>
                        <option value="SK">Saskatchewan</option>
                        <option value="NT">Northwest Territories</option>
                        <option value="NU">Nunavut</option>
                        <option value="YT">Yukon</option>
                    </select>
                    <label for="phone">Phone Number:</label>
                    <span id="phoneWrong"></span>
                    <input type="number" id="phone" name="phone" required>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                    <button type="submit">Submit</button>

                </form>
            </div>
            <div class="close">
                <span id="cross">&times;</span>
            </div>
        </div>
    </div>
    <div class="result">
        <div class="cart">
            <h2>Cart</h2>
            <ul id="cartItems"></ul>
            <div class="cartButtons">
                <button id="clearCart">Clear Cart</button>
                <button class="btn" id="checkout">Checkout</button>
            </div>
        </div>
        <% if (receipt==='Please choose at least one item.' ) { %>
            <div class="notReceipt">
                <p>Error: <%= receipt %>
                </p>
                <% } else if (receipt && receipt.customer) { %>
                    <div class="receipt">
                        <p class="receiptValues">Name: <%= receipt.customer.name %>
                        </p>
                        <p class="receiptValues">Address: <%= receipt.customer.address %>
                        </p>
                        <p class="receiptValues">City: <%= receipt.customer.city %>
                        </p>
                        <p class="receiptValues">Province: <%= receipt.customer.province %>
                        </p>
                        <p class="receiptValues">Phone: <%= receipt.customer.phone %>
                        </p>
                        <p class="receiptValues">Email: <%= receipt.customer.email %>
                        </p>
                        <h3 class="receiptValues">Items</h3>
                        <ul>
                            <% receipt.items.forEach(item=> { %>
                                <li class="receiptValues listValues" >
                                    <%= item.name %> - $<%= item.price %>
                                </li>
                                <% }) %>
                        </ul>

                        <h3 class="receiptValues">SubTotal: $<%= receipt.subTotal %>
                        </h3>
                        <h3 class="receiptValues">Tax: $<%= receipt.tax %>
                        </h3>
                        <h3 class="receiptValues">Total: $<%= receipt.total %>
                        </h3>
                    </div>
                    <% } %>
            </div>
            <script src="/script.js"></script>
</body>

</html>
